# AI Provider Configuration
AI_PROVIDER=azure  # Options: azure, openrouter, openai, anthropic

# Azure OpenAI Configuration
AZURE_OPENAI_KEY=your-azure-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# OpenAI Configuration
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# MCP Configuration
MCP_HTTP_URL=http://mcp-server:8000
MCP_HTTP_API_KEY=your-mcp-key

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application Configuration
APP_HOST=ai.yourcompany.com
APP_SECRET=your-secret-key-for-sessions-change-this-in-production
LOG_LEVEL=INFO

# Traefik Configuration (for production)
# ACME_EMAIL=your-email@domain.com